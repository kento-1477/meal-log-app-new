{
  "name": "meal-log-app",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/server",
    "apps/mobile",
    "apps/edge-gateway",
    "packages/shared"
  ],
  "scripts": {
    "supabase:serve": "cd supabase && supabase functions serve --env-file .env.supabase.local",
    "supabase:deploy": "cd supabase && supabase functions deploy --import-map ./functions/deno.json auth meal-log iap referral ai",
    "dev:server": "npm run dev --workspace apps/server",
    "dev:mobile": "npm run start --workspace apps/mobile",
    "lint": "eslint .",
    "format": "prettier --write \"**/*.{ts,tsx,js,json,md}\"",
    "migrate:reset": "npx -w apps/server prisma migrate reset --force --skip-generate --skip-seed",
    "test": "npm run scan:secrets && npm run test:workspaces",
    "test:workspaces": "npm run test --workspaces --if-present",
    "test:integration": "node --loader ./apps/server/tests/ts-loader.mjs --test --test-concurrency=1 ./apps/server/tests/integration/*.test.ts",
    "ci:simulate-dual-write": "node scripts/simulate_dual_write.js",
    "ci:check-diffs": "node scripts/check_diffs.js",
    "scan:secrets": "node scripts/check-secrets.mjs",
    "test:golem": "npm run ci:simulate-dual-write && npm run ci:check-diffs"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.1.0",
    "@eslint/js": "^9.13.0",
    "@types/node": "^22.9.0",
    "@typescript-eslint/eslint-plugin": "^8.12.1",
    "@typescript-eslint/parser": "^8.12.1",
    "eslint": "^9.13.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-react": "^7.34.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "prettier": "^3.3.3",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3",
    "expo-router": "~6.0.11",
    "react-native-safe-area-context": "~5.6.0",
    "react-native-screens": "~4.16.0"
  }
}
