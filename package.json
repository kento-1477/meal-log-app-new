{
  "name": "meal-log-app",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/server",
    "apps/mobile",
    "packages/shared"
  ],
  "scripts": {
    "dev:server": "npm run dev --workspace apps/server",
    "dev:mobile": "npm run start --workspace apps/mobile",
    "lint": "eslint .",
    "format": "prettier --write \"**/*.{ts,tsx,js,json,md}\"",
    "migrate:reset": "npx -w apps/server prisma migrate reset --force --skip-generate --skip-seed",
    "test": "npm run test:workspaces",
    "test:workspaces": "npm run test --workspaces --if-present",
    "test:integration": "node --loader apps/server/tests/ts-loader.mjs --test apps/server/tests/integration/*.test.ts",
    "ci:simulate-dual-write": "node scripts/simulate_dual_write.js",
    "ci:check-diffs": "node scripts/check_diffs.js",
    "test:golem": "npm run ci:simulate-dual-write && npm run ci:check-diffs"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.1.0",
    "@eslint/js": "^9.13.0",
    "@typescript-eslint/eslint-plugin": "^8.12.1",
    "@typescript-eslint/parser": "^8.12.1",
    "@types/node": "^22.9.0",
    "eslint": "^9.13.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-react": "^7.34.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "prettier": "^3.3.3",
    "typescript": "^5.6.3"
  }
}
