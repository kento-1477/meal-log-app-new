{
  "expo": {
    "name": "Meal Log",
    "slug": "meal-log",
    "scheme": "meallog",
    "version": "0.1.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#f2f2f7"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.meallog.app",
      "infoPlist": {
        "NSAppTransportSecurity": {
          "NSExceptionDomains": {
            "localhost": {
              "NSIncludesSubdomains": true,
              "NSTemporaryExceptionAllowsInsecureHTTPLoads": true,
              "NSTemporaryExceptionMinimumTLSVersion": "TLSv1.1"
            },
            "127.0.0.1": {
              "NSIncludesSubdomains": true,
              "NSTemporaryExceptionAllowsInsecureHTTPLoads": true,
              "NSTemporaryExceptionMinimumTLSVersion": "TLSv1.1"
            }
          }
        },
        "NSPhotoLibraryUsageDescription": "食事の写真を添付するためにフォトライブラリへアクセスします。",
        "NSPhotoLibraryAddUsageDescription": "食事の写真を保存するためにフォトライブラリへアクセスします。",
        "NSCameraUsageDescription": "料理を撮影して記録に追加するためにカメラを利用します。"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#f2f2f7"
      },
      "package": "com.meallog.app",
      "intentFilters": [
        {
          "action": "VIEW",
          "data": [
            {
              "scheme": "meallog",
              "host": "invite"
            }
          ],
          "category": [
            "BROWSABLE",
            "DEFAULT"
          ]
        }
      ],
      "permissions": [
        "android.permission.RECORD_AUDIO"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static"
    },
    "plugins": [
      [
        "expo-router",
        {
          "root": "app"
        }
      ],
      [
        "expo-secure-store",
        {
          "faceIDPermission": "Allow Meal Log to use Face ID to unlock your account"
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "食事の写真を添付するためにフォトライブラリへアクセスします。",
          "savePhotosPermission": "食事の写真を保存するためにフォトライブラリへアクセスします。",
          "cameraPermission": "料理を撮影して記録に追加するためにカメラを利用します。"
        }
      ]
    ],
    "extra": {
      "apiBaseUrl": "https://ushkrapyubwrrjfuzpla.functions.supabase.co",
      "router": {
        "root": "app"
      },
      "eas": {
        "projectId": "632c3f03-537f-430c-baf5-c2add0d5d08d"
      }
    }
  }
}
