# Server
PORT=4000
# Generate with `openssl rand -hex 32` (never commit the real value)
SESSION_SECRET="__REPLACE_WITH_SECURE_RANDOM__"
# Provide your full connection string via deployment secrets.
# Example format: postgresql://USER:PASSWORD@HOST:5432/DB_NAME?schema=public
DATABASE_URL="__DATABASE_URL__"
# Apple Sign In: used by the server to verify Apple identity tokens (comma-separated audiences supported)
APPLE_SERVICE_ID="com.meallog.app"

AI_ATTEMPT_TIMEOUT_MS=25000
AI_TOTAL_TIMEOUT_MS=35000
AI_HEDGE_DELAY_MS=5000
AI_MAX_ATTEMPTS=2
# IAP_TEST_MODE must stay false in production. Override to true only for local dev sandboxes.
IAP_TEST_MODE=false
# When enabling IAP test mode outside local dev, set a strong token and send it via `X-IAP-Test-Mode` header.
IAP_TEST_MODE_TOKEN="__OPTIONAL_TEST_TOKEN__"
# Offline verification skips Apple/Google calls. Enable only for automated tests.
IAP_OFFLINE_VERIFICATION=false
APP_STORE_SHARED_SECRET="__SET_IN_SECURE_STORE__"
# Leave unset (or false) unless you explicitly trust a proxy like Cloud Run / ALB.
TRUST_PROXY=false

# Expo mobile client
EXPO_PUBLIC_API_BASE_URL=http://localhost:4000
